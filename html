<script type="text/javascript">
// function is Created
function CurrentFunction(){
var checked = document.getElementById("same").checked;
document.getElementById("CurrentName").value = checked?
document.getElementById("RegisteredName").value : "";
document.getElementById("CurrentZip").value = checked?
document.getElementById("RegisteredZip").value : "";
document.getElementById("CurrentAddress").value = checked?
document.getElementById("RegisteredAddress").value : "";
}
